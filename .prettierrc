{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,

	"plugins": ["prettier-plugin-svelte", "@ianvs/prettier-plugin-sort-imports"],

	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],

	"importOrderTypeScriptVersion": "5.7.3",
	"importOrderParserPlugins": ["typescript"],
	"importOrder": [
		"<TYPES>^[.]",
		"<TYPES>",
		"",
		"^svelte$",
		"^svelte/",
		"^@sveltejs/",
		"",
		"<BUILTIN_MODULES>",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^[.$]"
	]
}
